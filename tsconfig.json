{
    "include": ["src"],
    "compilerOptions": {
      "module": "esnext",
      "target": "esnext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "declaration": true,
      "strict": false,
      "moduleResolution": "node",
      "jsx": "react",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "emitDeclarationOnly": true,
      "outDir": "dist",
      "rootDir": "src"
    }
  }